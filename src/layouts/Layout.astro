---
import '../styles/global.css'
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Upop - Librería moderna de alertas, toasts y confirmaciones" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/upop@1.0.2/dist/upop.css">
	</head>
	<body class="font-sans bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 min-h-screen">
		<div class="fixed inset-0 overflow-hidden pointer-events-none">
			<div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-blue-400/20 to-purple-400/20 rounded-full blur-3xl animate-pulse"></div>
			<div class="absolute -bottom-40 -left-40 w-80 h-80 bg-gradient-to-br from-indigo-400/20 to-pink-400/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
			<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-gradient-to-br from-cyan-400/10 to-blue-400/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 4s;"></div>
		</div>
		
		<nav class="fixed top-0 w-full bg-white/80 backdrop-blur-md border-b border-gray-200/50 z-50">
			<div class="max-w-6xl mx-auto px-6 py-4">
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-2">
						<div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
							<span class="text-white font-bold text-sm">U</span>
						</div>
						<span class="text-xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">upop</span>
					</div>
					<div class="hidden md:flex space-x-8">
						<a href="#inicio" class="text-gray-600 hover:text-blue-600 transition-colors">Inicio</a>
						<a href="#instalacion" class="text-gray-600 hover:text-blue-600 transition-colors">Instalación</a>
						<a href="#ejemplos" class="text-gray-600 hover:text-blue-600 transition-colors">Ejemplos</a>
						<a href="#documentacion" class="text-gray-600 hover:text-blue-600 transition-colors">Documentación</a>
						<a href="#playground" class="text-gray-600 hover:text-blue-600 transition-colors">Playground</a>
					</div>
				</div>
			</div>
		</nav>

		<main class="relative z-10">
			<slot />
		</main>

		<footer class="relative z-10 bg-white/50 backdrop-blur-sm border-t border-gray-200/50 mt-20">
			<div class="max-w-6xl mx-auto px-6 py-8">
				<div class="flex flex-col md:flex-row items-center justify-between">
					<div class="flex items-center space-x-2 mb-4 md:mb-0">
						<div class="w-6 h-6 bg-gradient-to-br from-blue-500 to-purple-600 rounded-md flex items-center justify-center">
							<span class="text-white font-bold text-xs">U</span>
						</div>
						<span class="text-gray-600">upop</span>
					</div>
					<div class="flex space-x-6">
						<a href="#" class="text-gray-500 hover:text-blue-600 transition-colors">GitHub</a>
						<a href="#" class="text-gray-500 hover:text-blue-600 transition-colors">MIT License</a>
					</div>
				</div>
			</div>
		</footer>

		<script src="/upop.js" type="module"></script>
	</body>
</html>
