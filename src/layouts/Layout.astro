---
import '../styles/global.css'
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<!-- Title (SEO) -->
		<title>{title}</title>

		<!-- Meta Description (máx 160 caracteres) -->
		<meta name="description" content="Upop es una librería moderna de JavaScript para crear alertas, toasts y confirmaciones con diseño atractivo, integración simple y sin dependencias." />

		<!-- Indexación -->
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href="https://upop-alert.vercel.app/" />

		<!-- Keywords (no usadas tanto por Google, pero útiles para otros buscadores) -->
		<meta name="keywords" content="upop, alertas javascript, librería toasts, confirmaciones js, sweetalert alternativa, notificaciones modernas, frontend UI" />

		<!-- Open Graph -->
		<meta property="og:title" content="Upop - Librería de Alertas, Toasts y Confirmaciones en JavaScript" />
		<meta property="og:description" content="Crea notificaciones modernas con Upop: alertas, toasts y confirmaciones fáciles de usar y sin dependencias." />
		<meta property="og:image" content="https://upop-alert.vercel.app/preview.png" />
		<meta property="og:url" content="https://upop-alert.vercel.app/" />
		<meta property="og:type" content="website" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Upop - Librería de Alertas y Toasts en JS" />
		<meta name="twitter:description" content="Librería ligera y moderna para alertas, toasts y confirmaciones en JavaScript. Open source y fácil de integrar." />
		<meta name="twitter:image" content="https://upop-alert.vercel.app/preview.png" />

		<!-- Favicon -->
		<link rel="icon" type="image/png" href="/favicon.png" />

		<!-- Fuente -->
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap" as="style" />
		<link href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap" rel="stylesheet" />

		<!-- CSS Librería -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/upop@1.0.2/dist/upop.css">

		<!-- Schema.org (SoftwareApplication) -->
		<script type="application/ld+json">
		{
		"@context": "https://schema.org",
		"@type": "SoftwareApplication",
		"name": "Upop",
		"applicationCategory": "DeveloperApplication",
		"operatingSystem": "All",
		"softwareVersion": "1.0.2",
		"url": "https://upop-alert.vercel.app/",
		"downloadUrl": "https://www.npmjs.com/package/upop",
		"author": {
			"@type": "Person",
			"name": "Luca Tittarelli"
		}
		}
		</script>
	</head>

	<body class="font-sans bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 min-h-screen">
		<div class="fixed inset-0 overflow-hidden pointer-events-none">
			<div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-blue-400/20 to-purple-400/20 rounded-full blur-3xl animate-pulse"></div>
			<div class="absolute -bottom-40 -left-40 w-80 h-80 bg-gradient-to-br from-indigo-400/20 to-pink-400/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
			<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-gradient-to-br from-cyan-400/10 to-blue-400/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 4s;"></div>
		</div>
		
		<nav class="fixed top-0 w-full bg-white/80 backdrop-blur-md border-b border-gray-200/50 z-50">
			<div class="max-w-6xl mx-auto px-6 py-4">
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-2">
						<div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
							<span class="text-white font-bold text-sm">U</span>
						</div>
						<span class="text-xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">upop</span>
					</div>
					<div class="hidden md:flex space-x-8">
						<a href="#inicio" class="text-gray-600 hover:text-blue-600 transition-colors">Inicio</a>
						<a href="#instalacion" class="text-gray-600 hover:text-blue-600 transition-colors">Instalación</a>
						<a href="#ejemplos" class="text-gray-600 hover:text-blue-600 transition-colors">Ejemplos</a>
						<a href="#documentacion" class="text-gray-600 hover:text-blue-600 transition-colors">Documentación</a>
						<a href="#playground" class="text-gray-600 hover:text-blue-600 transition-colors">Playground</a>
						<a href="https://github.com/Luca-Tittarelli/upop">
							<svg viewBox="0 0 24 24" aria-hidden="true" class="size-6 fill-slate-900"><path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.463 2 11.97c0 4.404 2.865 8.14 6.839 9.458.5.092.682-.216.682-.48 0-.236-.008-.864-.013-1.695-2.782.602-3.369-1.337-3.369-1.337-.454-1.151-1.11-1.458-1.11-1.458-.908-.618.069-.606.069-.606 1.003.07 1.531 1.027 1.531 1.027.892 1.524 2.341 1.084 2.91.828.092-.643.35-1.083.636-1.332-2.22-.251-4.555-1.107-4.555-4.927 0-1.088.39-1.979 1.029-2.675-.103-.252-.446-1.266.098-2.638 0 0 .84-.268 2.75 1.022A9.607 9.607 0 0 1 12 6.82c.85.004 1.705.114 2.504.336 1.909-1.29 2.747-1.022 2.747-1.022.546 1.372.202 2.386.1 2.638.64.696 1.028 1.587 1.028 2.675 0 3.83-2.339 4.673-4.566 4.92.359.307.678.915.678 1.846 0 1.332-.012 2.407-.012 2.734 0 .267.18.577.688.48 3.97-1.32 6.833-5.054 6.833-9.458C22 6.463 17.522 2 12 2Z"></path></svg>
						</a>
					</div>
				</div>
			</div>
		</nav>

		<main class="relative z-10">
			<slot />
		</main>

		<footer class="relative z-10 bg-white/50 backdrop-blur-sm border-t border-gray-200/50 mt-20">
			<div class="max-w-6xl mx-auto px-6 py-8">
				<div class="flex flex-col md:flex-row items-center justify-between">
					<div class="flex items-center space-x-2 mb-4 md:mb-0">
						<div class="w-6 h-6 bg-gradient-to-br from-blue-500 to-purple-600 rounded-md flex items-center justify-center">
							<span class="text-white font-bold text-xs">U</span>
						</div>
						<span class="text-gray-600">upop</span>
					</div>
					<div class="flex space-x-6">
						<a href="https://github.com/Luca-Tittarelli/upop" class="text-gray-500 hover:text-blue-600 transition-colors flex">
							GitHub
							<svg viewBox="0 0 24 24" aria-hidden="true" class="size-6 fill-slate-900"><path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.463 2 11.97c0 4.404 2.865 8.14 6.839 9.458.5.092.682-.216.682-.48 0-.236-.008-.864-.013-1.695-2.782.602-3.369-1.337-3.369-1.337-.454-1.151-1.11-1.458-1.11-1.458-.908-.618.069-.606.069-.606 1.003.07 1.531 1.027 1.531 1.027.892 1.524 2.341 1.084 2.91.828.092-.643.35-1.083.636-1.332-2.22-.251-4.555-1.107-4.555-4.927 0-1.088.39-1.979 1.029-2.675-.103-.252-.446-1.266.098-2.638 0 0 .84-.268 2.75 1.022A9.607 9.607 0 0 1 12 6.82c.85.004 1.705.114 2.504.336 1.909-1.29 2.747-1.022 2.747-1.022.546 1.372.202 2.386.1 2.638.64.696 1.028 1.587 1.028 2.675 0 3.83-2.339 4.673-4.566 4.92.359.307.678.915.678 1.846 0 1.332-.012 2.407-.012 2.734 0 .267.18.577.688.48 3.97-1.32 6.833-5.054 6.833-9.458C22 6.463 17.522 2 12 2Z"></path></svg>
						</a>
					</div>
				</div>
			</div>
		</footer>

		<script src="/upop.js" type="module"></script>
	</body>
</html>
